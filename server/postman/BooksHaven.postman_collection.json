{
  "name": "Create Orders",
  "request": {
    "method": "POST",
    "header": [
      {
        "key": "Authorization",
        "value": "Bearer {{token}}",
        "type": "text"
      },
      {
        "key": "Content-Type",
        "value": "application/json",
        "type": "text"
      }
    ],
    "url": {
      "raw": "{{baseUrl}}/api/orders",
      "host": ["{{baseUrl}}"],
      "path": ["api", "orders"]
    },
    "body": {
      "mode": "raw",
      "raw": "{\n    \"id_shop\": \"65a4e1234b8f9a2c3d5e6f7g\",\n    \"items\": [\n        {\n            \"id_sach\": \"65a4e1234b8f9a2c3d5e6f7g\",\n            \"so_luong\": 2\n        },\n        {\n            \"id_sach\": \"65a4e1234b8f9a2c3d5e6f7h\",\n            \"so_luong\": 1\n        }\n    ]\n}",
      "description": "Each item in the items array will create a separate order"
    },
    "description": "Create separate orders for each book with shipping cost calculation. Each book will be created as an individual order with its own shipping cost."
  }
}