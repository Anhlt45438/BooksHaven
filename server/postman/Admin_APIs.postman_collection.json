{
  "info": {
    "name": "Admin APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Books Management",
      "item": [
        {
          "name": "Update Book Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"trang_thai\": false\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/books/{{id_book}}/status",
              "host": ["{{baseUrl}}"],
              "path": [
                "api",
                "admin",
                "books",
                "{{id_book}}",
                "status"
              ]
            },
            "description": "Update book status (Admin only). Set book to active (true) or inactive (false)"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000"
    }
  ]
}